{
  "compilerOptions": {
    "isolatedModules": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2020", "DOM", "ES2015", "ES2015.Promise", "ES2015.Core", "ES2015.Collection"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist-examples",
    "declaration": true
  },
  "include": ["examples/**/*"],
  "exclude": ["node_modules", "dist"]
}
